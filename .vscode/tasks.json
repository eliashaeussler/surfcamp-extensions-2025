{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Database",
            "type": "shell",
            // Run only within the devcontainer
            "command": "[ -d ~/.vscode-server ] && mysql -u db -h db -pdb db || exit 0",
            "presentation": {
                "group": "database",
                "reveal": "never",
                "panel": "new",
                "echo": false,
            },
            "runOptions": {
                "runOn": "folderOpen" // This starts both tasks when the container is started
            }
        },
        {
            "label": "Setup",
            "type": "shell",
            "command": "bash .devcontainer/install-vs-code-extensions.sh",
            "presentation": {
                "group": "setup",
                "reveal": "never",
                "panel": "new",
                "close": true,
                "echo": false,
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}
