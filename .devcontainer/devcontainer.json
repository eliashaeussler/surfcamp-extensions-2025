{
	"name": "TYPO3 SurfCamp 2025",
	"dockerComposeFile": "docker-compose.yml",
	"service": "typo3",
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker"
			]
		}
	},
	// @todo: Update the image, because pushing "latest"
	// only will not update when the container is created
	// @todo: xdebug
	"remoteUser": "vscode",
	"initializeCommand": "docker pull ghcr.io/ochorocho/surfcamp-extensions-2025:latest",
	"postStartCommand": "bash .devcontainer/post-start.sh && ./bin/typo3 extension:setup && apachectl start",
	"waitFor": "updateContentCommand"
}
