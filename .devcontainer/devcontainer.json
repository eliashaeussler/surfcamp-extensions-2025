{
	"name": "TYPO3 SurfCamp 2025",
	"dockerComposeFile": "docker-compose.yml",
	"service": "typo3",
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker"
			]
		}
	},
	// @todo: Update the image, because pushing "latest" 
	// only will not update when the container is created
	"remoteUser": "vscode",
	"postCreateCommand": "bash .devcontainer/post-create.sh",
	"postStartCommand": "./bin/typo3 extension:setup && apachectl start"
}