{
	"name": "TYPO3 SurfCamp 2025",
	"dockerComposeFile": "docker-compose.yml",
	"service": "typo3",
	"workspaceFolder": "/workspace",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker"
			]
		}
	},
	"features": {
    	"ghcr.io/skriptfabrik/devcontainer-features/mailpit:1": {}
	},
	"remoteUser": "vscode",
	"initializeCommand": "docker pull ghcr.io/ochorocho/surfcamp-extensions-2025:latest",
	"postStartCommand": "bash .devcontainer/post-start.sh && ./bin/typo3 extension:setup && apachectl start",
	"waitFor": "updateContentCommand",
	"forwardPorts": [8025]
}
