{
  "extends": ["config:recommended"],
  "branchPrefix": "github-renovate/",
  "packageRules": [
    {
      "matchManagers": ["composer"],
      "matchPackageNames": ["typo3/cms-*"],
      "postUpdateOptions": ["updateLockFileOnly"],
      "postUpgradeTasks": {
        "fileFilters": ["**/composer.json"],
        "executionMode": "update",
        "commands": [
          "composer update 'typo3/cms-*' -W"
        ]
      }
    },
    {
      "matchManagers": ["dockerfile"],
      "matchFileNames": [".github/.devcontainer/Dockerfile"]
    }
  ]
}
