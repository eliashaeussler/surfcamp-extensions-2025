{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended", ":disableMajorUpdates", ":disableDependencyDashboard"],
    "commitMessagePrefix": "[RENOVATE] ",
    "commitMessageTopic": "{{depName}}",
    "commitMessageExtra": " ({{{displayFrom}}} => {{{displayTo}}})",
    "rangeStrategy": "in-range-only",
    "enabledManagers": ["composer", "dockerfile"],
    "packageRules": [
      {
          "groupName": "TYPO3 CMS",
          "matchPackageNames": ["!typo3/cms-cli", "!typo3/cms-composer-installers"],
          "matchManagers": ["composer"]
      }, {
        "groupName": "Docker",
        "matchDatasources": ["docker"],
        "matchManagers": ["dockerfile"],
        "versioning": "semver"
      }
    ],
    "ignorePaths": [
        "**/node_modules/**",
        "**/vendor/**",
        "**/test/**",
        "**/tests/**",
        "**/fixtures/**",
        "**/packages/**"
    ]
}
